# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=abmc_reports
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Alternative: Full database URL (if provided, overrides individual settings)
# DATABASE_URL=postgresql://user:password@localhost:5432/abmc_reports

# =============================================================================
# Google Sheets Configuration (for migration)
# =============================================================================
GOOGLE_SHEET_ID=your_google_sheet_id_here
WORKSHEET_NAME=Sheet1

# =============================================================================
# Tenant Configuration
# =============================================================================
TENANT_SLUG=abmc-demo

# =============================================================================
# Redis Configuration (for Celery)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Alternative: Full Redis URL
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
ENV=development  # development, staging, production
DEBUG=true
SQL_ECHO=false  # Set to true to see SQL queries in logs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-for-jwt-tokens-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS Settings
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
